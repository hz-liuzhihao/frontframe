/* 水平布局 */
.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-row-st-ce {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.flex-row-st-ed {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
}

.flex-row-ce-st {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
}

.flex-row-ce-ce {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.flex-row-ce-ed {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
}


.flex-row-en-st {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-start;
}

.flex-row-en-ce {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}


.flex-row-ed-ed {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
}


